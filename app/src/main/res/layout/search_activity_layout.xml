<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimary"/>

    <EditText
        android:id="@+id/search_location_text"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="50dp"
        android:hint="city,plz.."
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:drawableEnd="@drawable/ic_my_location_black_24dp"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_below="@+id/search_location_text"
        android:layout_marginTop="40dp"
        android:text="Search"
        android:background="@drawable/roundcorner_background"
        android:textColor="@color/primaryTextColor"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>